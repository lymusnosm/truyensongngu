<div class = "section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Truyện Song Ngữ</h1>
        <h2 class="text-center">Đăng Nhập</h2>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :Email ,class: "form-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.email_field :email, :placeholder => "Email" ,class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :Password ,class: "form-label" %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, :placeholder => "Password" ,class: "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <%= f.submit "Log in", class: "btn btn-default" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class = "section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center">Chưa có tài khoản</h2>
      </div>
    </div>
    <div class="col-sm-offset-5 col-sm-10">
      <a href="<%=signup_path%>" class="btn btn-default">Đăng Ký<a>
      </div>
    </div>
  </div>
