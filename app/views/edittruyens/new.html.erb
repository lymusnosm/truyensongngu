<h1>up Truyện</h1>
<%= form_for @truyen do |f| %>
<div class="col-sm-8">
  <p>
    <%= f.label :name_vn  %><br>
    <%= f.text_field :name_vn ,class: "form-control"%>
  </p>
  <p>
    <%= f.label :name_en  %><br>
    <%= f.text_field :name_en  ,class: "form-control"%>
  </p>
  <p>
    <%= f.label :content_vn  %><br>
    <%= f.text_area :content_vn ,class: "form-control"%>
  </p>
  <p>
    <%= f.label :content_en  %><br>
    <%= f.text_area :content_en  ,class: "form-control"%>
  </p>
  <p>
    <%= f.label :image_url  %><br>
    <%= f.text_field :image ,class: "form-control"%>
  </p>
  <p>
    <%= f.label :theloai_id  %>
    <h5>điền số ứng với thể loại</h5>
    <ol>
      <% @theloais.each do |t|%>
      <li>
        <%=t.title %>
      </li>
      <%end%>
    </ol>
    <br>
    <%= f.text_field :theloai_id ,class: "form-control"%>
  </p>
  <%= f.submit "OK",class: "btn btn-default" %>
</div>
<% end %>
