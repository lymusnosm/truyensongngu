<div class = "section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Truyện Song Ngữ</h1>
        <h2 class="text-center">Đăng Ký</h2>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= form_for(@user) do |f| %>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :Tên ,class: "form-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :first_name, :placeholder => "First name"  ,class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :Họ ,class: "form-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :last_name, :placeholder => "Last name"  ,class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :Email ,class: "form-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.email_field :email, :placeholder => "Email"  ,class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :Password ,class: "form-label" %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, :placeholder => "Password"  ,class: "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <%= f.submit "Create an account", class: "btn btn-default" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
